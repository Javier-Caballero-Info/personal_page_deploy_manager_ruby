<div class="body">

  <%= render 'header' %>

  <main>
    <div class="container mt-5">

      <h1><%= @user.full_name %></h1>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <%= link_to 'Edit', edit_user_path(@user), class: 'waves-effect waves-white btn-flat blue-text text-darken-2' %> |
      <%= link_to 'Back', users_path, class: 'waves-effect waves-white btn-flat ' %>

    </div>
  </main>

  <%= render 'footer' %>

</div>